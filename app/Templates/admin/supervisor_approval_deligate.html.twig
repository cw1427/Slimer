{% extends 'adminlte/layout/base.html.twig' %}

{% block header_content %}
    {{ macros.page_header("Request form", "Admin approval deligate") }}
{% endblock %}

 {% block admin_lte_breadcrumb %}
       <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Admin approval deligate</li>
      </ol>
 {% endblock %}

{% block page_content %}
	<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <i class="fa fa-random"></i>
    <h3 class="box-title">
    	{% if isAdmin > 0 %}
    		Upon entering the approver's Core ID, any request pending for his approval can be delegated.
    	{% else %}
    		Upon selecting the approver's Core ID, any request pending for his approval can be delegated.
    	{% endif %}
    </h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
              title="Collapse">
        <i class="fa fa-minus"></i></button>
    </div>
  </div>
  <div class="box-body row" style="min-height:560px; height:auto!important;margin: 0 auto;">
	<div class="col-md-offset-3 col-md-6" style="margin-top:2%">	
		<div class="box">
    		<form id="deligateForm" class="form-horizontal" method="post" action="">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="inputEmail3" class="col-sm-4 control-label">Core ID:</label>
                      <div class="col-sm-7">
                        <input type="input" class="form-control" id="coreid" disabled value="{{ container.session.get('user')['loginName'] }}"/>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="inputEmail3" class="col-sm-4 control-label">Requester's Name:</label>
                      <div class="col-sm-7">
                        <input type="input" class="form-control" id="username" disabled value="{{ container.session.get('user')['userName'] }}"/>
                      </div>
                    </div>
                    {% if isAdmin > 0 %}
                    <div class="form-group">
                      <label for="inputPassword3" class="col-sm-4 control-label">New approver's CoreID:</label>
                      <div class="col-sm-7">
                        <input type="input" class="form-control" id="newCoreid" name="newCoreid" placeholder="core ID">
                      </div>
                      <span style="color:#FF0000;">*</span>
                    </div>
                    {% else %}
					 <div class="form-group">
                      <label for="inputPassword3" class="col-sm-4 control-label">Select an approver's CoreID:</label>
                      <div class="col-sm-7">
                         <select class="form-control" id="newCoreid" name="newCoreid">
                  			 	<option value=''>Select an approver coreID</option>
                  			     {% for key,value in al %}
                        		 	<option value="{{ key }}">{{ value }}</option>
                        		 {% endfor %}
                  		  </select>
                      </div>
                      <span style="color:#FF0000;">*</span>
                    </div>
                    {% endif %}
                   </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                     <div class="row">
                        <div class="col-md-2 col-md-offset-3">
                        	<button type="button" class="btn btn-default" id="resetBtn">Reset</button>
                        </div>
                         <div class="col-md-2">
                        	<button type="button" class="btn btn-info pull-right" id="submitBtn">Submit</button>
                        </div>
                     </div>
                  </div>
                  <!-- /.box-footer -->
              </form>
        </div>
	</div>

  </div>
  <!-- /.box-body -->

</div>
 <!-- /.box -->

{% endblock %}


        "php": "^5.6",
        "guzzlehttp/guzzle" : "^3.7",
        "justinrainbow/json-schema" : ">=1.3.7",
    	"monolog/monolog" : ">=1.11.0",
    	"slim/slim": "^3.10.0",
    	"bryanjhv/slim-session": "~3.0",
    	"slim/twig-view": "^2.2",
        "slim/flash": "^0.2.0",
        "slim/csrf": "^0.8.2",

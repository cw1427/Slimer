{
    "name": "Slimer",
    "type": "web framework",
    "version": "1.4.6",
    "description": "Light weight framework based on Slim and AdminLTE and WTF project",
    "authors": [
        {
            "name": "Shawn Chen",
            "role": "Developer"
        }
    ],

    "require": {
        "slimer/slimer-core": "^1.0.8"
    },
    "autoload": {
        "psr-4": {
        	"App\\": "app/",
        	"App\\Provider\\": "app/Provider/",
        	"App\\Middleware\\": "app/Middleware/",
            "App\\Command\\": "app/Command/",
			"App\\Api\\": "app/Api/"
        },
        "psr-0":{
        	 "Slimer\\": "app/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
